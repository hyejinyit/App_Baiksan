<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"  >
    <!-- 주황색 버튼 -->
    <!-- 평상시 -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <corners
                android:radius="5dp" />
            <solid
                android:color="#EA7B31" />
            <size
                android:width="280dp"
                android:height="90dp" />
            <stroke
                android:width="1dp"
                android:color="#EA7B31"/>
        </shape>
    </item>
    <!-- 클릭했을 때 -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <corners
                android:radius="5dp" />
            <solid
                android:color="#E1DED7" />
            <size
                android:width="280dp"
                android:height="90dp" />
        </shape>
    </item>

</selector>


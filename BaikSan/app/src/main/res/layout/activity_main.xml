                app:scale_top="30"
                app:scale_width="250" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DC4C3F"
                android:gravity="center_vertical"
                app:scale_height="5"
                app:scale_left="20"
                app:scale_top="80"

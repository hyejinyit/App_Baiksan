                android:textStyle="bold"
                app:scale_height="50"
                app:scale_left="330"
                app:scale_textsize="40"
                app:scale_top="230"
                app:scale_width="265" />

            <!-- 출고관리 -->
            <View
                android:id="@+id/btn_out"
                android:layout_width="wrap_content"
